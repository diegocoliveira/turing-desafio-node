{
    "version": 2,
    "builds": [
        {
            "src": "src/server.mjs",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    
    "routes":[
        {
            "src": "/api/(.*)",
            "dest": "src/server.mjs"
        },
        {
            "src": "/",
            "dest": "public/index.html"
        },
        {
            "src": "/(.+)",
            "dest": "public/$1"
        },
        { 
            "src": "/(.*)", 
            "status": 404, 
            "dest": "public/404/index.html" }
    ]
}
