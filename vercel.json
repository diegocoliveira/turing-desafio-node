{
    "version": 2,
    "builds": [
        {
            "src": "src/server.mjs",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    
    "routes":[
        { "handle": "filesystem" },
        { "src": "/(.*)", "status": 404, "dest": "/other-404.html" },
        {
            "src": "/api/(.*)",
            "dest": "src/server.mjs"
        },
        {
            "src": "/",
            "dest": "public/index.html"
        },
        {
            "src": "/(.+)",
            "dest": "public/$1"
        }
    ]
}
